{% endblock %}

{% block mininavs %}
	<li ><a  href="{{ path('AC_List') }}">Articles</a></li>
	<li><a href="{{ path('hotels') }}">Hotels</a></li>
	<li><a class="active" href="{{ path('plats') }}">Plats</a></li>
	<li><a href="{{ path('activities') }}">Activities</a></li>
	<li><a href="{{ path('events') }}">events</a></li>
	{% if app.user %}
		<li ><a href="{{ path('List_Rec') }}">Profile</a></li>
	{% else %}
		<li ><a href="{{ path('app_login_front') }}">Register</a></li>
	{% endif %}	{#  	<li ><a href="{{ path('gouvernorats') }}"></a></li>
#}



{% endblock %}


{% block content %}
	<div class="page-top" id="templatemo_contact"></div>
	<!-- /.page-header -->

	<div class="middle-content">
		<div style="margin-bottom: 60px;" class="container">
			<div class="row">
				<div class="our-listing owl-carousel">
					{% for plat in plats %}
						<div class="list-item">
							<div class="list-thumb">
								<img style="height: 220px; object-fit: cover;" src="{{ asset('/uploads/' ~ plat.image) }}" alt="plat">
							</div>
							<!-- /.list-thumb -->
							<div class="list-content">
								<div style="display: flex;">
									<h5 style="margin-left: 0; margin-right: auto;">{{ plat.nomplat }}</h5>
									<h5 style="margin-right: 0; margin-left: auto; color: #78b999;">{{ plat.restaurant }}</h5>
								</div>
								<div style="display: flex;">
									<span style="margin-left: 0; margin-right: auto;">{{ plat.chef }}</span>
									<span style="margin-right: 0; margin-left: auto; color: #78b999;">{{ plat.region }}</span>
								</div>
							</div>
							<!-- /.list-content -->
						</div>
						<!-- /.list-item -->
					{% else %}
						<div class="list-item">
							no records found
						</div>
					{% endfor %}
				</div>
				<!-- /.our-listing -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container -->
	{% endblock %}
