	<li><a href="{{ path('hotels') }}">Hotels</a></li>
	<li class="active"><a href="{{ path('plats') }}">Plats</a></li>
	<li><a href="{{ path('activities') }}">Activities</a></li>
	<li><a href="{{ path('events') }}">events</a></li>
